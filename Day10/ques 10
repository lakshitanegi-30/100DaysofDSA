//Read a string and check if it is a palindrome using two-pointer comparison.

#include <stdio.h>
#include <string.h>

int main() {
    char s[100];
    printf("Enter a string: ");
    scanf("%s", s);

    int left = 0;
    int right = strlen(s) - 1;

    while (left < right) {
        if (s[left] != s[right]) {
            printf("NO\n");
            return 0;   // Exit immediately if mismatch found
        }
        left++;
        right--;
    }

    printf("YES\n");   // If loop finishes, it's a palindrome
    return 0;
}
